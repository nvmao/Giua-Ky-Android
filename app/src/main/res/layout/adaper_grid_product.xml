<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="283dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_grid_image"
            android:layout_width="267dp"
            android:layout_height="164dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="7dp"
            android:maxWidth="267dp"
            android:maxHeight="164dp"
            android:minWidth="267dp"
            android:minHeight="164dp"
            app:srcCompat="@drawable/food2" />

        <TextView
            android:id="@+id/product_grid_name"
            android:layout_width="254dp"
            android:layout_height="36dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_grid_price"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/product_grid_inStock"
            android:layout_width="149dp"
            android:layout_height="29dp"
            android:layout_marginBottom="381dp"
            android:text="TextView"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>