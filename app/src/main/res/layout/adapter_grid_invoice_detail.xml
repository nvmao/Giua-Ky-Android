<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/invoiceDetailIdText"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/invoiceDetailImage"
        app:layout_constraintEnd_toStartOf="@+id/invoiceDetailImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/invoiceDetailImage" />

    <ImageView
        android:id="@+id/invoiceDetailImage"
        android:layout_width="91dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/invoiceDetailPrice"
        app:layout_constraintStart_toEndOf="@+id/invoiceDetailIdText"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/food2" />

    <EditText
        android:id="@+id/invoiceDetailPrice"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/invoiceDetailImage"
        app:layout_constraintEnd_toStartOf="@+id/invoiceDetailCount"
        app:layout_constraintStart_toEndOf="@+id/invoiceDetailImage"
        app:layout_constraintTop_toTopOf="@+id/invoiceDetailImage" />

    <EditText
        android:id="@+id/invoiceDetailTotalPrice"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/invoiceDetailImage"
        app:layout_constraintEnd_toStartOf="@+id/removeInvoiceDetailBtn"
        app:layout_constraintStart_toEndOf="@+id/invoiceDetailCount"
        app:layout_constraintTop_toTopOf="@+id/invoiceDetailImage" />

    <EditText
        android:id="@+id/invoiceDetailCount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/invoiceDetailImage"
        app:layout_constraintEnd_toStartOf="@+id/invoiceDetailTotalPrice"
        app:layout_constraintStart_toEndOf="@+id/invoiceDetailPrice"
        app:layout_constraintTop_toTopOf="@+id/invoiceDetailImage" />

    <Button
        android:id="@+id/removeInvoiceDetailBtn"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:text="remove"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/invoiceDetailImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/invoiceDetailTotalPrice"
        app:layout_constraintTop_toTopOf="@+id/invoiceDetailImage"
        app:layout_constraintVertical_bias="0.437" />
</androidx.constraintlayout.widget.ConstraintLayout>